<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">

    <t t-name="awesome_clicker.client_action">
        <div style="padding: 16px;">
            <div>
                <span>Clicks: <ClickerValue /></span>
                <button type="button" class="btn btn-secondary o-default-button ms-1" t-on-click="() => this.clicker.increment(9)">
                    Increment
                </button>
            </div>
            <div t-if="clicker.state.level >= 1" class="mt-3">
                <h2>Bots</h2>
                <div class="card">
                    <div class="card-header">
                        <t t-esc="clicker.state.clickBots" />x ClickBots (10 clicks/10 seconds)
                        <i class="fa fa-android"></i>
                    </div>
                    <div class="card-body">
                        <button type="button" class="btn btn-primary o-default-button" t-att-disabled="clicker.state.counter lt 1000" t-on-click="() => clicker.buyClickBot()">
                            Buy ClickBot (1000 clicks)
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
